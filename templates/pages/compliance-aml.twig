<script>
  const mapLabels = document.querySelectorAll(".map-label");

  const leftTitle = document.getElementById("left-region-title");
  const leftDetails = document.getElementById("left-region-details");
  const rightTitle = document.getElementById("right-region-title");
  const rightDetails = document.getElementById("right-region-details");

  function updateInfoBox(side, region, details) {
    if (side === "left") {
      leftTitle.textContent = region;
      leftDetails.innerHTML = details;
    } else if (side === "right") {
      rightTitle.textContent = region;
      rightDetails.innerHTML = details;
    }
  }

  mapLabels.forEach(label => {
    label.addEventListener("click", () => {
      const region = label.dataset.region;
      const details = label.dataset.details;

      // Check if label uses flex-column
      const isColumn = label.classList.contains("flex-column");
      const side = isColumn ? "left" : "right";

      updateInfoBox(side, region, details);

      // Optional: highlight selected
      mapLabels.forEach(l => l.classList.remove("active"));
      label.classList.add("active");
    });
  });

  // Set default left & right
  window.addEventListener("DOMContentLoaded", () => {
    const leftDefault = document.querySelector('.map-label.flex-column');
    const rightDefault = document.querySelector('.map-label.d-flex:not(.flex-column)');
    if (leftDefault) updateInfoBox("left", leftDefault.dataset.region, leftDefault.dataset.details);
    if (rightDefault) updateInfoBox("right", rightDefault.dataset.region, rightDefault.dataset.details);
  });
</script>




