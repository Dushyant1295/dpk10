{% extends "base.twig" %}

{% block content %}


<section class="bg-white vh-100 canvas-section">



    
</section>



<section class="inner-banner bg-green">
    <div class="container pe-0">
        <div class="row">
            <div class="col-lg-7 sb my-auto tiny-editor">
                <h1>Partners</h1>

                <p>
                    The Arab Energy Fund, founded in 1974, supports energy security and
                    sustainability across 35+ countries with $5.3bn in financing, equity,
                    and advisory solutions. Backed by top credit ratings and strong ESG
                    focus, we empower partners, talent, and youth.
                </p>
            </div>
            <div class="col-lg-5 position-relative">
                <img class="img-focus" src="{{ theme.link ~ '/src/img/focus.svg'}}" alt="" />
                <img class="mask" src="{{ theme.link ~ '/src/img/ab.jpg'}}" alt="" />
            </div>
        </div>
    </div>
</section>

<section class="bg-white sy">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12 text-center pb-5">
                <h2>List of TAEF partners</h2>
            </div>


            <div class="col-lg-12 text-center pb-5">
                <div class="partner-filters">
                    <button class="filter-btn active" data-filter="all">ALL</button>
                    <button class="filter-btn" data-filter="investor-relations"> INVESTOR RELATIONS </button>
                    <button class="filter-btn" data-filter="services">SERVICES</button>
                    <button class="filter-btn" data-filter="corporate-banking"> CORPORATE BANKING </button>
                    <button class="filter-btn" data-filter="partners">PARTNERS</button>
                </div>
            </div>


            <div class="col-lg-12 pt-6">
                <div class="partners-grid">
                    <div class="row g-5">
                        {% for i in 1..8 %}
                        <div class="col-lg-3 col-md-6 all services">
                            <div class="partner-card">
                                <img src="{{ theme.link ~ '/src/img/logo1.svg'}}" alt="Partner Logo" />
                            </div>
                            <h6 class="mt-3 text-center">Partner Name</h6>
                        </div>

                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="bg-white sy">
    <div class="container pt-0">
        <div class="cta-card bg-purple p-10 rounded">
            <div class="col-lg-10 h-100 tiny-editor">
                <h2>Supplier registration</h2>
                <p>
                    Our strategic approach empowers businesses to thrive in a competitive
                    landscape. We focus on tailored solutions that align with your unique
                    goals.
                </p>
                <a href="#" class="btn cream mt-6">EXPLORE MORE</a>
                <img src="{{ theme.link ~ '/src/img/about/orange-card-svg.svg'}}" alt="" />
            </div>
        </div>
    </div>
</section>

{% include 'include/footer.twig' %}
{% endblock %}